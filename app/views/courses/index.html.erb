<div class="course-index">
  <!-- Image de bannière -->
  <div class="course-banner">
    <%= image_tag "paysage_2.jpg", class: "course-banner-image" %>
  </div>

  <div class="course-content">
    <h1 class="course-title">Prochains Cours de Yoga</h1>

    <div class="course-list">
      <% @courses.each do |course| %>
        <div class="course-card">
          <!-- Image à gauche -->
          <div class="course-image">
            <% if course.photo.attached? %>
              <%= image_tag course.photo, class: "course-photo" %>
            <% else %>
              <%= image_tag "default_course.jpg", class: "course-photo" %>
            <% end %>
          </div>

          <!-- Contenu principal (texte + bouton) -->
          <div class="course-main-content">
            <!-- Infos à droite -->
            <div class="course-info">
              <h2 class="course-card-title"><%= course.title %></h2>
              <p><strong>Lieu :</strong> <%= course.location %></p>
<% if course.start_time.present? %>
  <p><strong>Date :</strong> <%= l(course.start_time.to_date, format: :long) %></p>
  <p><strong>Heure :</strong> <%= course.start_time.strftime("%Hh%M") %></p>
<% else %>
  <p><strong>Date :</strong> à venir</p>
<% end %>

              <p><strong>Tarif :</strong> <%= course.price %> €</p>
            </div>

            <!-- Bouton à droite -->
            <div class="course-button-container">
              <a href="<%= course_path(course) %>" class="btn btn-primary">Voir le cours</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <a href="<%= root_path %>" class="btn btn-secondary" data-turbo="false">← Retour à l'accueil</a>
  </div>
</div>
