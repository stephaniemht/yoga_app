<div class="new-course-wrapper">
  <h1>Créer un Cours de Yoga</h1>

  <%= form_with model: @course, local: true do |f| %>
    <% if @course.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@course.errors.count, "erreur") %> empêchent la création du cours :</h4>
        <ul>
          <% @course.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title, "Nom du cours" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :location, "Adresse" %>
      <%= f.text_field :location, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :start_time, "Date et Heure du cours" %>
      <%= f.datetime_select :start_time, selected: Time.zone.local(2025, 3, 25, 9, 0) %>
    </div>

    <div class="form-group">
      <%= f.label :duration, "Durée du cours" %>
      <%= f.text_field :duration, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price, "Tarif" %>
      <%= f.number_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :photo, "Photo (optionnelle)" %>
      <%= f.file_field :photo, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Créer le cours", class: "btn-submit" %>
    </div>
  <% end %>
</div>
