<h1 class="edit-title">Modifier la Randonnée Yoga</h1>

<%= form_with model: @hike, url: hike_path(@hike), method: :patch, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, "Nom de la randonnée" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :location, "Adresse" %>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date, "Date de début du séjour" %>
    <%= f.date_select :date, { order: [:day, :month, :year], use_month_names: I18n.t('date.month_names')[1..12], start_year: Date.today.year } %>
  </div>

  <div class="form-group">
    <%= f.label :time, "Heure de départ" %>
    <%= f.time_select :time, { prompt: { hour: 'Heure', minute: 'Minute' } }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_date, "Date de fin du séjour" %>
    <%= f.date_select :end_date, { order: [:day, :month, :year], use_month_names: I18n.t('date.month_names')[1..12], start_year: Date.today.year } %>
  </div>

  <div class="form-group">
    <%= f.label :price, "Tarif" %>
    <%= f.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :photo, "Photo (optionnelle)" %>
    <%= f.file_field :photo, class: "form-control" %>
  </div>

  <%= f.submit "Mettre à jour la randonnée", class: "btn-primary" %>
<% end %>
