<h1 class="edit-title">Créer une Randonnée Yoga</h1>

<%= form_with model: @hike, url: hikes_path, local: true do |f| %>
  <% if @hike.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@hike.errors.count, "erreur") %> empêchent la création de la randonnée :</h4>
      <ul>
        <% @hike.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "Nom de la randonnée" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :location, "Adresse" %>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date, "Date de début du séjour" %>
    <%= f.text_field :date,
          class: "form-control",
          value: (@hike.date ? @hike.date.strftime("%Y-%m-%d") : ""),
          data: { controller: "flatpickr" } %>
  </div>

  <div class="form-group">
    <%= f.label :time, "Heure de départ" %>
    <%= f.time_select :time, { prompt: { hour: 'Heure', minute: 'Minute' } }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_date, "Date de fin du séjour" %>
    <%= f.text_field :end_date,
          class: "form-control",
          value: (@hike.end_date ? @hike.end_date.strftime("%Y-%m-%d") : ""),
          data: { controller: "flatpickr" } %>
  </div>

  <div class="form-group">
    <%= f.label :price, "Tarif" %>
    <%= f.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :photo, "Photo (optionnelle)" %>
    <%= f.file_field :photo, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Créer la randonnée", class: "btn-submit" %>
  </div>
<% end %>
